<div ng-app="resident-app" class="container">

<h1 class="span7 text-center">Residentially Challenged </h1>


  <div ng-controller="ResidentCtrl">


 
      <div ng-repeat="resident in residents | limitTo:8">
        <div class="col-xs-18 col-sm-6 col-md-3">
          <div class="thumbnail">
            <img src="https://scontent-a-lax.xx.fbcdn.net/hphotos-xfp1/v/t1.0-9/1239593_10203505701587493_274258297_n.jpg?oh=7b1c5f0d457eeabf910ea084127d94a4&oe=5405112F" alt="">
              
              <div class="caption">
                <h4>{{resident.name| limitTo : 20}}</h4>

                <p>{{resident.bio | limitTo : 100}}...</p>
                <p>${{calcTotal(resident)}} of ${{resident.goal_monetary}} from {{resident.donations.length}} 
                <ng-pluralize count="resident.donations.length"
                 when="{0: 'donations',
                     1: 'donation',
                     other: 'donations'
                     }">
				</ng-pluralize> 
				</p>
                
                <div class="progress">
                  <div class="progress-bar progress-bar-success" role="progressbar" aria-valuenow="80" aria-valuemin="0" aria-valuemax="100" style="width: {{calcPercent(resident)}}%">
                
                      <p>Donations</p>
                      </div>
                       </div>

                <p class="span7 text-center"><a href="residents/{{resident.id}}" class="btn btn-info btn-med" role="button">Learn more</a></p>
            </div>
          </div>
  </div>
</div>


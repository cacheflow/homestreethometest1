<h1> Create New User </h1>
<% if current_user.role_id == 2 %>
	<%= render partial: "form" %>
<% elsif current_user.role_id == 3 %>
	<%= bootstrap_form_for (@resident) do |f| %>
		<%= f.text_field :name %><br />
		<%= f.text_field :bio %><br />
		<%= f.text_field :goals %><br />
		<%= f.text_field :goal_monetary %><br />
		<%= Partner.where(:user_id => current_user.id)[0].name %>
		<%= f.hidden_field :partner_id, :value => Partner.where(:user_id => current_user.id)[0].id %>
		<%= f.hidden_field :user_id, :value => current_user.id %><br />
		<%= f.submit class: "btn btn-primary btn-block"%>
	<% end %>

<% end %>
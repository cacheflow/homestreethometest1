<h1> Create New User </h1>
<% if current_user.role_id == 2 %>
	<%= render partial: "form" %>
<% elsif current_user.role_id == 3 %>
	<%= form_for (@resident) do |f| %>
		Name <%= f.text_field :name %><br />
		Bio <%= f.text_field :bio %><br />
		Goals <%= f.text_field :goals %><br />
		Monetary Goal <%= f.text_field :goal_monetary %><br />
		Partner: <%= Partner.where(:user_id => current_user.id)[0].name %>
		<%= f.hidden_field :partner_id, :value => Partner.where(:user_id => current_user.id)[0].id %>
		<%= f.hidden_field :user_id, :value => current_user.id %><br />
		<%= f.submit %>

	<% end %>

<% end %>
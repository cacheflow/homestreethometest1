<%= form_for (@donor) do |f| %>
	Name <%= f.text_field :name %><br />
	Organization <%= f.text_field :org %><br />
	Phone <%= f.text_field :phone %><br />
	Email <%= f.text_field :email, :value => current_user.email %><br />
	Email Updates <%= f.check_box :email_updates %><br />
	Phone Updates<%= f.check_box :phone_updates %>
	<%= f.hidden_field :user_id, :value => current_user.id %><br />
	<%= f.submit %>


<% end %>